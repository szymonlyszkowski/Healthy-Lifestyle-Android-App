<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_target_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:orientation="vertical"
    tools:context=".TargetListActivity"
    android:background="@drawable/background"
    >

    <Button
        android:id="@+id/addNewTargetButton"
        android:text="@string/activity_target_add_new"
        android:onClick="addTargetEvent"
        android:layout_marginTop="20sp"
        style="@style/SubmitButtonStyle"/>

    <Button
        android:id="@+id/editTargetButton"
        android:text="@string/activity_target_edit"
        android:onClick="editTargetEvent"
        android:layout_below="@+id/addNewTargetButton"
        style="@style/SubmitButtonStyle"/>

    <ListView
        android:id="@android:id/list"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/editTargetButton"
        style="@style/ListStyle"
        />

</RelativeLayout>
